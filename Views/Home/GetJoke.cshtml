@{
    Layout = "_Layout";
    ViewData["Title"] = "Get Joke";
}
@using menus.Models
@model JokeResponse

<div class="text-center mt-5">
    <h1 class="display-4">Here's a Joke for You!</h1>

    @if (Model.Type == "single")
    {
        <div class="alert alert-primary mt-4" role="alert">
            @Model.Joke
        </div>
    }
    else if (Model.Type == "twopart")
    {
        <div class="alert alert-info mt-4" role="alert">
            <strong>Setup:</strong> @Model.Setup
            <br />
            <strong>Delivery:</strong> @Model.Delivery
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4" role="alert">
            Couldn't load a valid joke. Try refreshing!
        </div>
    }
</div>
