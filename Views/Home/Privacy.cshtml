        <mensajillo texto="👹👹👹👹👹"></mensajillo>
        <movie-card title="hola imagen" image="https://picsum.photos/200/300"></movie-card>
        <movie-card title="Hola diablo = hello kitty" image="https://picsum.photos/200"></movie-card>

        <div v-if="estado == 'cagando el hola lucifer'">
            <h1>Cargando...</h1>
        </div>
        <div v-else-if="estado == 'error'">
            <h1>Hubos un error</h1>
        </div>
        <div v-else>
            <p>Tu no tapas el baño saramambiche</p>
        </div>

        <ul>
            <li v-for="pelicula in peliculas" :key="pelicula">
                {{ pelicula }}
            </li>
        </ul>

        <ul>
            <li v-for="(pelicula, index) in bpeliculas" :key="index">
                {{ pelicula.titulo }}, {{ pelicula.imagen }}
            </li>
        </ul>

        <movie-card v-for="(pelicula, index) in bpeliculas" :key="index" :title="pelicula.titulo"
            :image="pelicula.imagen"></movie-card>

        <ul>
            <li v-for="frase in chuck" :key="index">
                {{frase.value}}
            </li>
        </ul>

        <movie-card v-for="(frase, index) in bchuck" :key="index" :title="frase.value"
            :image="frase.icon_url"></movie-card>

    </div>
    <!-- Scripts VUE -->
    <script>
        Vue.component('movie-card', {
            props: ['image', 'title'],
            template:
                '<div>' +
                '<img width="100" v-bind:src="image" v-bind:alt="title"/>' +
                '<h2>{{ title }}</h2>' +
                '</div>'
        });
        Vue.component('mensajillo', {
            props: ['texto'],
            template: '<h1><p>{{ texto }}</p></h1>'
        });
        new Vue({
            el: '#app',
            data: {
                mensaje: 'Bienvenido!!!',
